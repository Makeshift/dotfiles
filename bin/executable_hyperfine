#!/bin/bash
set -a
x86_64_hyperfine_INSTALLER_ARCHIVE="https://github.com/sharkdp/hyperfine/releases/download/v1.15.0/hyperfine-v1.15.0-x86_64-unknown-linux-gnu.tar.gz"
x86_64_hyperfine_INSTALLER_ARCHIVE_BINARY="hyperfine-v1.15.0-x86_64-unknown-linux-gnu/hyperfine"
x86_64_hyperfine_INSTALLER_ARCHIVE_INSTALL_LOCATION="/usr/local/bin/hyperfine"
x86_64_hyperfine_INSTALLER_ARCHIVE_EXTRACT_COMMAND="tar -xzf"

armv7l_hyperfine_INSTALLER_ARCHIVE="https://github.com/sharkdp/hyperfine/releases/download/v1.15.0/hyperfine-v1.15.0-arm-unknown-linux-gnueabihf.tar.gz"
armv7l_hyperfine_INSTALLER_ARCHIVE_BINARY="hyperfine-v1.15.0-arm-unknown-linux-gnueabihf/hyperfine"
armv7l_hyperfine_INSTALLER_ARCHIVE_INSTALL_LOCATION="/usr/local/bin/hyperfine"
armv7l_hyperfine_INSTALLER_ARCHIVE_EXTRACT_COMMAND="tar -xzf"

aarch64_hyperfine_INSTALLER_ARCHIVE="https://github.com/sharkdp/hyperfine/releases/download/v1.15.0/hyperfine-v1.15.0-aarch64-unknown-linux-gnu.tar.gz"
aarch64_hyperfine_INSTALLER_ARCHIVE_BINARY="hyperfine-v1.15.0-aarch64-unknown-linux-gnu/hyperfine"
aarch64_hyperfine_INSTALLER_ARCHIVE_INSTALL_LOCATION="/usr/local/bin/hyperfine"
aarch64_hyperfine_INSTALLER_ARCHIVE_EXTRACT_COMMAND="tar -xzf"

armhf_hyperfine_INSTALLER_ARCHIVE="$aarch64_hyperfine_INSTALLER_ARCHIVE"
armhf_hyperfine_INSTALLER_ARCHIVE_BINARY="$aarch64_hyperfine_INSTALLER_ARCHIVE_BINARY"
armhf_hyperfine_INSTALLER_ARCHIVE_INSTALL_LOCATION="$aarch64_hyperfine_INSTALLER_ARCHIVE_INSTALL_LOCATION"
armhf_hyperfine_INSTALLER_ARCHIVE_EXTRACT_COMMAND="$aarch64_hyperfine_INSTALLER_ARCHIVE_EXTRACT_COMMAND"

"$HOME"/bin/run_or_get_app hyperfine "$@"
