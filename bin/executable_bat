#!/bin/bash
set -a
x86_64_bat_INSTALLER_ARCHIVE="https://github.com/sharkdp/bat/releases/download/v0.22.1/bat-v0.22.1-x86_64-unknown-linux-gnu.tar.gz"
x86_64_bat_INSTALLER_ARCHIVE_BINARY="bat-v0.22.1-x86_64-unknown-linux-gnu/bat"
x86_64_bat_INSTALLER_ARCHIVE_INSTALL_LOCATION="/usr/local/bin/bat"
x86_64_bat_INSTALLER_ARCHIVE_EXTRACT_COMMAND="tar -xzf"

armv7l_bat_INSTALLER_ARCHIVE="https://github.com/sharkdp/bat/releases/download/v0.22.1/bat-v0.22.1-arm-unknown-linux-gnueabihf.tar.gz"
armv7l_bat_INSTALLER_ARCHIVE_BINARY="bat-v0.22.1-arm-unknown-linux-gnueabihf/bat"
armv7l_bat_INSTALLER_ARCHIVE_INSTALL_LOCATION="/usr/local/bin/bat"
armv7l_bat_INSTALLER_ARCHIVE_EXTRACT_COMMAND="tar -xzf"

aarch64_bat_INSTALLER_ARCHIVE="https://github.com/sharkdp/bat/releases/download/v0.22.1/bat-v0.22.1-aarch64-unknown-linux-gnu.tar.gz"
aarch64_bat_INSTALLER_ARCHIVE_BINARY="bat-v0.22.1-aarch64-unknown-linux-gnu/bat"
aarch64_bat_INSTALLER_ARCHIVE_INSTALL_LOCATION="/usr/local/bin/bat"
aarch64_bat_INSTALLER_ARCHIVE_EXTRACT_COMMAND="tar -xzf"

armhf_bat_INSTALLER_ARCHIVE="$aarch64_bat_INSTALLER_ARCHIVE"
armhf_bat_INSTALLER_ARCHIVE_BINARY="$aarch64_bat_INSTALLER_ARCHIVE_BINARY"
armhf_bat_INSTALLER_ARCHIVE_INSTALL_LOCATION="$aarch64_bat_INSTALLER_ARCHIVE_INSTALL_LOCATION"
armhf_bat_INSTALLER_ARCHIVE_EXTRACT_COMMAND="$aarch64_bat_INSTALLER_ARCHIVE_EXTRACT_COMMAND"

"$HOME"/bin/run_or_get_app bat "$@"
